<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/base_padding_large"
        android:paddingBottom="@dimen/base_margin_xlarge_40">

        <TextView
            android:id="@+id/tv_alamat_ktp"
            style="@style/TextMD.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_medium"
            android:layout_marginTop="@dimen/base_margin_medium"
            android:text="@string/alamat_ktp" />

        <include
            android:id="@+id/alamat_ktp"
            layout="@layout/fragment_alamat_ktp"/>

        <include
            android:id="@+id/alamat_domisili"
            layout="@layout/fragment_alamat_domisili" />

    </LinearLayout>
</ScrollView>