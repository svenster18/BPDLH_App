<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/base_margin_medium"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_simpan_draft"
        style="@style/TextSM.SemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_medium"
        android:layout_marginTop="@dimen/base_margin_medium"
        android:layout_marginEnd="@dimen/base_margin_medium"
        android:backgroundTint="@color/primary_main_color_50"
        android:text="@string/simpan_amp_draft"
        app:cornerRadius="@dimen/base_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_kembali"
        style="@style/Button.Outline.Gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_medium"
        android:layout_marginEnd="@dimen/base_margin_small"
        android:layout_marginBottom="@dimen/base_margin_small"
        android:text="@string/kembali"
        android:textAppearance="@style/TextSM.SemiBold"
        android:textColor="@color/gray_700"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/btn_simpan_draft"
        app:layout_constraintTop_toBottomOf="@+id/btn_simpan_draft" />

    <Button
        android:id="@+id/btn_selanjutnya"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_small"
        android:layout_marginTop="@dimen/base_margin_medium"
        android:text="@string/selanjutnya"
        android:textAppearance="@style/TextSM.SemiBold"
        app:cornerRadius="@dimen/base_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kembali"
        app:layout_constraintEnd_toEndOf="@+id/btn_simpan_draft"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/btn_simpan_draft" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
