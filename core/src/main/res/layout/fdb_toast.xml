<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_background"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="@dimen/base_margin_medium"
    android:paddingVertical="@dimen/base_margin_small"
    tools:background="@drawable/ticker_bg_info">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_margin_large_20"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/TextSM.SemiBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginHorizontal="@dimen/base_margin_small"
        android:textColor="@color/semantic_success_700"
        tools:text="pesan yang sangat panjang "/>

    <ImageView
        android:id="@+id/iv_right_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_margin_large"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_close_x" />

</LinearLayout>